<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Winner_Activity"
    android:background="@drawable/bg_conf">

    <ImageView
        android:id="@+id/win_IMG_Player"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/win_LBL_Name"
        android:src="@drawable/ironman" />

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/win_LBL_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#000000"
        android:textSize="70dp"
        android:fontFamily="sans-serif-black"/>
    <TextView
        android:id="@+id/win_LBL_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/win_IMG_Player"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="20dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="30dp"
        android:fontFamily="sans-serif-black"/>
        <Button
            android:id="@+id/win_BTN_NewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/win_LBL_Score"
            android:layout_centerHorizontal="true"
            android:text="New Game"
            android:textSize="30dp"/>
</RelativeLayout>