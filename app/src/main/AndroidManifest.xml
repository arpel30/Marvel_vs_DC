<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marvel_vs_dc">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Marvel_vs_DC">
        <activity
            android:name=".Activity_Settings"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Fragment_map"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity_TopTen"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity_Choose_Character"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity_Winner"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity_Game"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity_Main_Menu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>